 numero = int(input("Digite um numero:"))
 
 if numero%2 >0:
     print("impar")
     if numero >= 100:
         print("maior ou igual a cem")
     else:
         print("menor que cem")
 else:
     print("par")
     if numero >= 100:
         print("maior ou igual a cem")
     else:
         print("menor que cem")
