 km = int(input("Digite os km a percorrer:"))
 d = int(input("Digite os dias a ser alugado:"))

 f = (km*0.15)+(d*60)

 print("Se voce ira percorrer", km, "e ficar", d, 'dias', "voce ira pagar", f, "reais")


